</div>

<div>
  <div>
    <h2>
      Add a new todo
    </h2>

    <form action="/insert_todo" method="post">
      <div>
        <label for="describe_the_task">
         Describe the task:
        </label>
        <input type="text" id="content_box" name="query_content">
      </div>

      <button>
        Add to Next Up
      </button>
      </form>

      <div class="next_up">
        <h2>Next Up</h2>
        <input type="hidden" id="content_box" name="query_user_id">
        <ul>
           <% @list_next_up.each do |a_todo| %>
        <li>
         <div> <%= a_todo.content %> </div>
        </li>
        <small>
         Added <%= time_ago_in_words(a_todo.created_at) %> ago 

          <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>

        <form action="/modify_todo/<%= a_todo.id %>" method="post">
          <input type="hidden" name="query_status" value="in_progress">
          <button>Move to In Progress</button>
        </form>
          
        <% end %>
        </ul>
      </div>

      <div class="in_progress">
        <h2>In progress</h2>
        <input type="hidden" id="content_box" name="query_status">
                <ul>
       
           <% @list_in_progress.each do |a_todo| %>
        <li>
        <div><%= a_todo.content %></div>
        </li>
        <small>
          Started <%= time_ago_in_words(a_todo.created_at) %> ago 

          <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>

        <form action="/modify_todo/<%= a_todo.id %>" method="post">
          <input type="hidden" name="query_status" value="done">
          <button>Move to Done</button>
        </form>

        <% end %>
        </ul>
      </div>

            <div class="done">
        <h2>Done</h2>
        <input type="hidden" id="user_id_box" name="query_user_id">
          <ul>
      
       <% @done.each do |a_todo| %> 
       <li>
        <div><%= a_todo.content %></div>
      </li>
        <small>
        <%#Completed at <%= a_todo.created_at.strftime('%B %d, %Y %I:%M %p') %>
       Completed at <%= a_todo.created_at.strftime('%-l:%M%P on %-d-%b-%Y') %>
         <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>   
        
        <% end %>   
  </ul>
      </div>







<div>
  <h1>Your todo list</h1>
</div>

<div>
  <h2>Add a new todo</h2>

  <form action="/insert_todo" method="post">
    <div>
      <label for="content_box">Describe the task:</label>
      <input type="text" id="content_box" name="query_content">
    </div>

    <button>Add to Next Up</button>
  </form>
</div>

<div class="next_up" style="color: darkorange;">
  <h2>Next Up</h2>
  <ul>
    <% @list_next_up.each do |a_todo| %>
      <li>
        <div><%= a_todo.content %></div>
        <small>Added <%= time_ago_in_words(a_todo.created_at) %> ago 
          <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>
        <form action="/modify_todo/<%= a_todo.id %>" method="post">
          <input type="hidden" name="query_status" value="in_progress">
          <button>Move to In Progress</button>
        </form>
      </li>
    <% end %>
  </ul>
</div>

<div class="in_progress" style="color: darkgreen;">
  <h2>In Progress</h2>
  <ul>
    <% @list_in_progress.each do |a_todo| %>
      <li>
        <div><%= a_todo.content %></div>
        <small>Started <%= time_ago_in_words(a_todo.updated_at) %> ago 
          <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>
        <form action="/modify_todo/<%= a_todo.id %>" method="post">
          <input type="hidden" name="query_status" value="done">
          <button>Move to Done</button>
        </form>
      </li>
    <% end %>
  </ul>
</div>

<div class="done" style="color: grey;">
  <h2>Done</h2>
  <ul>
    <% @done.each do |a_todo| %>
      <li>
        <div><%= a_todo.content %></div>
        <small><%= a_todo.updated_at.time.strftime("Completed at %l:%M%P on %d-%b-%Y") %>
          <a href="/delete_todo/<%= a_todo.id %>">Delete</a>
        </small>
      </li>
    <% end %>
  </ul>
</div>
